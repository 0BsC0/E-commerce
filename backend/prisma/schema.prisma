generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  name       String
  lastName   String?                       // Solo viveristas
  email      String    @unique
  password   String
  phone      String?                       // Solo viveristas
  address    String?                       // Solo viveristas
  storeName  String?                       // Solo viveristas
  role       String    @default("customer")// "customer" o "viverista"
  createdAt  DateTime  @default(now())
  products   Product[]                     // Relaci√≥n: productos cargados
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  price       Float
  imageUrl    String
  category    String
  createdAt   DateTime  @default(now())
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}
